<% layout("layouts/boilerplate") %>
    <script>
        const mapBoxToken = "<%= process.env.MAPBOX_TOKEN %>";
        const listing = <%- JSON.stringify(listing) %>;
    </script>

    <div class="container mt-4 mb-5">
        <!-- Title & Meta Info -->
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto text-center mb-4">
                <h2 class="fw-bold">
                    <%= listing.title %>
                </h2>
                <span class="badge bg-secondary">
                    <%= listing.category.charAt(0).toUpperCase() + listing.category.slice(1) %>
                </span>
                <p class="text-muted mt-1"><i class="fa-solid fa-location-dot me-1"></i>
                    <%= listing.location %>, <%= listing.country %>
                </p>
            </div>
        </div>

        <!-- Main Image -->
        <div class="row mb-4">
            <div class="col-lg-10 mx-auto">
                <img src="<%= listing.image.url %>" class="img-fluid rounded shadow-sm w-100 show-img"
                    alt="listing_image" />
            </div>
        </div>

        <!-- Listing Details + Map -->
        <div class="row justify-content-center g-4">
            <div class="col-lg-6">
                <div class="p-4 border rounded shadow-sm bg-light">
                    <h5 class="mb-3 text-dark">Hosted by <%= listing.owner.username %>
                    </h5>
                    <p>
                        <%= listing.description %>
                    </p>
                    <p class="fs-5 fw-semibold">&#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                    </p>

                    <% if(currentUser && currentUser._id.equals(listing.owner._id)) { %>
                        <div class="d-flex gap-3 mt-3">
                            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark px-4 edit-btn">Edit</a>
                            <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
                                <button class="btn btn-outline-dark">Delete</button>
                            </form>
                        </div>
                        <% } %>
                </div>
            </div>

            <!-- Map -->
            <div class="col-lg-5">
                <div class="p-4 border rounded shadow-sm bg-light h-100">
                    <h5>Where you'll be</h5>
                    <div id="map" class="rounded mt-3" style="height: 300px;"></div>
                </div>
            </div>
        </div>

        <!-- Review Form -->
        <% if(currentUser) { %>
            <div class="row mt-5 justify-content-center">
                <div class="col-lg-10">
                    <h4>Leave a Review</h4>
                    <form action="/listings/<%= listing.id %>/reviews" method="POST"
                        class="p-4 border rounded shadow-sm bg-light">
                        <label class="form-label">Rating</label>
                        <fieldset class="starability-slot mb-3">
                            <% for (let i=1; i <=5; i++) { %>
                                <input type="radio" id="rate<%= i %>" name="review[rating]" value="<%= i %>" <%=i===1
                                    ? 'checked' : '' %> />
                                <label for="rate<%= i %>">
                                    <%= i %> star<%= i> 1 ? 's' : '' %>
                                </label>
                                <% } %>
                        </fieldset>
                        <label class="form-label">Comment</label>
                        <textarea name="review[comment]" class="form-control mb-3" rows="4" required></textarea>
                        <button class="btn btn-outline-dark">Submit</button>
                    </form>
                </div>
            </div>
            <% } %>

                <!-- All Reviews -->
                <% if(listing.reviews.length> 0) { %>
                    <div class="row mt-5 justify-content-center">
                        <div class="col-lg-10">
                            <h4>All Reviews</h4>
                            <div class="row gy-4 mt-2">
                                <% for(review of listing.reviews) { %>
                                    <div class="col-md-6">
                                        <div class="p-3 border rounded shadow-sm bg-white h-100">
                                            <h6>
                                                <%= review.author.username %>
                                            </h6>
                                            <p class="starability-result" data-rating="<%= review.rating %>"></p>
                                            <p>
                                                <%= review.comment %>
                                            </p>

                                            <% if(currentUser && currentUser._id.equals(review.author._id)) { %>
                                                <form
                                                    action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                                                    method="POST">
                                                    <button class="btn btn-sm btn-outline-dark">Delete</button>
                                                </form>
                                                <% } %>
                                        </div>
                                    </div>
                                    <% } %>
                            </div>
                        </div>
                    </div>
                    <% } %>
    </div>

    <script src="/js/map.js"></script>