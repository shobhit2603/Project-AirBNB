<% layout("layouts/boilerplate") %>

    <div class="row mt-3">
        <h1 class="col-6 offset-3">Login on Wanderlust</h1>
        <br><br><br>
        <div class="col-6 offset-3">
            <form action="/login" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input name="username" placeholder="Enter your username" id="username" type="text" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" placeholder="Enter your password" id="password" type="password" class="form-control" required />
                </div>
                <button class="btn btn-dark add-btn mt-3">Login</button>
            </form>
        </div>
    </div>